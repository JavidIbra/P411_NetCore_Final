@model IEnumerable<CodeAcademyApp.Models.Entity.Banner>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
      
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <p>@Html.Raw( item.Text)</p>
            </td>

            <td>
                <p>@Html.Raw(item.Title)</p>

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-circle">
                    <i class="fas fa-fw fa-wrench"></i>
                </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-circle">
                    <i class="fas fa-eye"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-circle">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
