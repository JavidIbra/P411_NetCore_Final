@model IEnumerable<CodeAcademyApp.Models.Entity.Group>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
  
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>Settings</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <p> @Html.Raw(item.Name)</p>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.Name)
            </td>

            <td>
                <img style="width: 6vw; height: 10vh;" src="~/img/educatimg/@item.Image" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-circle">
                    <i class="fas fa-fw fa-wrench"></i>
                </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-circle">
                    <i class="fas fa-eye"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-circle">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
